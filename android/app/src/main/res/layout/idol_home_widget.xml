<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/widget_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <TextView
        android:id="@+id/widget_overlay_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="12dp"
        android:padding="6dp"
        android:text="K-Hub"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="#66000000"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/widget_empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#f0d87f">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No wallpaper yet"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/widget_create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Wallpaper"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/widget_button_bg"
            android:paddingHorizontal="18dp"
            android:paddingVertical="10dp" />

    </LinearLayout>

</FrameLayout>